<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_virtualcitytour/models/rules">
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="title"
			type="text"
			label="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_TITLE_LABEL"
			description="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_TITLE_DESC"
			size="46"
			class="inputbox validate-title"
			required="true"
			default=""
		/>
		<field
			name="catid"
			type="category"
			extension="com_virtualcitytour"
			class="inputbox"
			default=""
			label="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_CATID_LABEL"
			description="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_CATID_DESC"
			required="true"
		>
		
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="latitude"
			type="text"
			label="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_LATITUDE_LABEL"
			description="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_LATITUDE_DESC"
			size="40"
			class="inputbox validate-latitude"
			required="false"
			default=""
		/>		
		<field
			name="longitude"
			type="text"
			label="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_LONGITUDE_LABEL"
			description="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_LONGITUDE_DESC"
			size="40"
			class="inputbox validate-longitude"
			required="false"
			default=""
		/>			
		<field
			name="address"
			type="text"
			label="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_ADDRESS_LABEL"
			description="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_ADDRESS_DESC"
			size="85"
			class="inputbox validate-address"
			required="false"
			default=""
		/>			
		<field
			name="description"
			type="textarea"
			label="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_DESCRIPTION_LABEL"
			description="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_DESCRIPTION_DESC"
			class="inputbox validate-description"
			filter="safehtml"
			buttons="false"
			hide="readmore,pagebreak,toggleeditor"
			required="true"
			default=""
			rows="5"
			cols="200"
		/>		
		<field 
			name="photo" 
			type="media" 
			hide_none="1" 
			label="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_PHOTO_LABEL"
			size="40"
		/>			
		<field
			name="votes"
			type="text"
			label="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_VOTES_LABEL"
			description="COM_VIRTUALCITYTOUR_VIRTUALCITYTOUR_FIELD_VOTES_DESC"
			size="4"
			class="inputbox validate-votes"
			required="false"
			default=""
		/>		
		
		<field
			name="userid"
			type="hidden"
		/>		
		
		<field
			name="photos"
			type="hidden"
		/>	
		<field
			name="panoramas"
			type="hidden"
		/>					
			
	</fieldset>
	
</form>
